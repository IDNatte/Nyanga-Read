{
	"name": "nyanga-read",
	"version": "3.0.0",
	"author": {
		"email": "idnatte@gmail.com",
		"name": "IDNatte",
		"url": "https://github.com/IDNatte/Nyanga-Read"
	},
	"scripts": {
		"svelte:dev": "vite dev",
		"svelte:build": "vite build",
		"svelte:preview": "vite preview",
		"svelte:check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"svelte:check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"svelte:lint": "prettier --plugin-search-dir . --check . && eslint .",
		"svelte:format": "prettier --plugin-search-dir . --write .",
		"python:start": "APP_DEV=\"True\" ./.venv/bin/python ./window/app.py",
		"python:build": "./.venv/bin/pyinstaller --noconfirm Nyanga-Read.spec",
		"python:ui:dev": "UI_APP_DEV=\"True\" ./.venv/bin/python ./window/app.py",
		"app:build:test": "yarn run svelte:build && ./.venv/bin/pyinstaller --noconfirm Nyanga-Read-debug.spec",
		"app:build": "yarn run svelte:build && yarn run python:build"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^2.0.2",
		"@sveltejs/kit": "^1.5.0",
		"@types/cookie": "^0.5.1",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"postcss": "^8.4.23",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"svelte": "^3.54.0",
		"svelte-check": "^3.0.1",
		"tailwindcss": "^3.3.1",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.2.0"
	},
	"type": "module",
	"dependencies": {
		"svelte-select": "^5.6.1"
	}
}